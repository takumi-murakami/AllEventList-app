<%= form_with(model: event, local: true, class:"new-event-post") do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class:"title-field" %>
    <%= form.text_field :title, placeholder:"例) ここにタイトルを入力してください(必須)" %>
  </div>

  <div class="field">
    <%= form.label :body, class:"body-field" %>
    <%= form.text_area :body, placeholder:"例) ここに補足の説明文などを入力してください(任意)" %>
  </div>

  <div class="field">
    <%= form.label :address, class:"title-field" %>
    <%= form.text_field :address, placeholder:"例) 東京都新宿区西新宿1-1-3(任意)" %>
  </div>

  <div class="field">
    <%= form.label :start_date, class:"start-date-field" %>
    <%= form.datetime_select :start_date, :use_month_numbers => true, :start_year => Time.now.year, :end_year => Time.now.year + 2, :minute_step => 10 %>
  </div>

  <div class="field">
    <%= form.label :end_date, class:"end-date-field" %>
    <%= form.datetime_select :end_date, :use_month_numbers => true, :start_year => Time.now.year, :end_year => Time.now.year + 2, :minute_step => 10 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
