<%# <%= render "shared/header" %> 

<div class="show-header">
  <h3 class="user-name"><%= @user.name %>
    <span class="pad">'s MyPage</span>
  </h3>
</div>

<table class="userpage-table">
  <% if user_signed_in? %>
  <thead class="userpage-thead">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Post user</th>
      <th colspan="3">Button</th>
    </tr>
  </thead>

  <tbody class="userpage-tbody">
    <% @events.each do |event| %>
        <tr>
          <td class="title-text"><%= event.title %></td>
          <td class="body-text"><%= event.body %></td>
          <td class="start-date"><%= event.start_date.to_s(:datetime_jp) %></td>
          <td class="end-date"><%= event.end_date.to_s(:datetime_jp) %></td>
          <td><%= @user.name %>
          <td class="show-event"><%= link_to '詳細', event %></td>
          <% if current_user.id == event.user.id %>
            <td class="edit-event"><%= link_to '編集', edit_event_path(event) %></td>
            <td class="delete-event"><%= link_to '完了', event, method: :delete, data: { confirm: 'Do you really want to complete it?' } %></td>
          <% end %>
        </tr>
    <% end %>
  </tbody>
  <% end %>
</table>

<div class="actions">
  <%= link_to "return Top", root_path, class: "return-top" %>
</div>

<div class="search-address">
  <h3 class="pad">Search Address</h3>
</div>

<input
  id="pac-input"
  class="controls"
  type="text"
  placeholder="Search Box"/>
<div id="map"></div>